<div class="container">
  <div class="item-container">
    <div class="item-details">
      <div class="item-user-details">
        <div class="item-details-name">
          <h1 class="center-align"><%= @item.name %></h1>
        </div>
        <div class="item-details-user">
          <div class="username">
            <h3> from <%= @item.user.username %></h3>
          </div>
          <div class="user-avatar">
            <img src="https://kitt.lewagon.com/placeholder/users/<%= @item.user.username %>">
          </div>
        </div>
      </div>
      <div class="item-details-desc">
        <p><%= @item.description %></p>
      </div>
      <% @exchange.errors.full_messages.each do |error| %>
      <p style="color: red;"><%= error %></p>
    <% end %>
    </div>

    <div class="item-request">
      <div class="item-request-photo">
        <img src="<%= @item.photo %>">
      </div>
      <div class="item-request-form">
        <%= simple_form_for [@item, @exchange] do |f| %>
          <%= f.error :start_date, id: 'start_date_error' %>
          <%= f.input :start_date, as: :date, html5: true %>
          <%= f.error :end_date, id: 'end_date_error' %>
          <%= f.input :end_date, as: :date, html5: true %>
          <%= f.submit "Request to borrow", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
