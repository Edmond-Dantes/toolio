      <!--   <%  #else %> -->
       <!-- <%= # cl_image_tag ( "#{@item.photo}.jpg", class: "show_img") %> -->
       <% end %>
     </div>

  </div>
    <%= simple_form_for [@item, @exchange] do |f| %>
    <%= f.association :start_date, as: :date, html5: true %>
    <%= f.association :end_date, as: :date, html5: true %>
    <%= f.submit "Request to borrow", class: "btn btn-primary" %>
 </div>

</div>

