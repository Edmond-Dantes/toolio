<div class="container">
  <h1 class="center-align">
   <%= @item.name %></h1>
  <div class="row">
   <h3> from <%= @item.user.username %></h3>
   <!-- <div class="col s12 m4 l3"> -->
         <p><%= @item.description %></p>
  </div>
   <div class="row">
     <!-- <div class="col s12 m8 l9 center-align"> -->
       <div style="width: 100%;">
        <!-- image here --><%= image_tag "https://picsum.photos/200/300/?random" %>

       </div>
     <!-- </div> -->
      <%= simple_form_for [@item, @exchange] do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.submit "Request to borrow", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>

