
<div class="navbar-wagon">
  <%= link_to root_path do %>
    <%= image_tag "logo.png", class: "logo"%>
  <% end %>
  <%= link_to "Search tools..", root_path, class: "btn" %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>
      <%= link_to "Add new item", new_user_item_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "My Dashboard", exchanges_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>

    <% else %>
      <%= link_to "Sign In", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>

    <!-- Profile picture with dropdown list -->
    <% if user_signed_in? %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= cl_image_tag(current_user.photo, :width =>85, :height => 85, :crop => :thumb, :gravity => :face, data: {toggle: "dropdown"}) %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <%= render "layouts/dropdown" %>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- TODO: Unsigned in User Icon -->
    <% end %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <% if user_signed_in? %>
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <%= render "layouts/dropdown" %>
        </ul>
      <% else %>
        <!-- TODO: MOBILE Unsigned in User Icon -->
      <% end %>
    </div>
  </div>
</div>
