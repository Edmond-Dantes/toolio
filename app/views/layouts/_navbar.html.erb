  <div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to "Neighborrow", root_path, class: "btn" %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>
      <%= link_to "Add new item", new_user_item_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to current_user.username, "#", class: "navbar-wagon-item navbar-wagon-link dropdown-toggle black" %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>

    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if user_signed_in? %>
        <%= cl_image_tag(current_user.photo, :width =>85, :height => 85, :crop => :thumb, :gravity => :face) %>
        <% else %>
        <img src="https://kitt.lewagon.com/placeholder/users/google" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <% end %>

        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <%= render "layouts/dropdown" %>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <%= render "layouts/dropdown" %>
      </ul>
    </div>
  </div>
</div>
